<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:windowBackground">@color/white_mat</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="materialButtonStyle">@style/Borderless</item>
        <item name="textAppearanceButton">@style/TextAppearance.Button.Normal</item>
    </style>


    <style name="Borderless" parent="Widget.MaterialComponents.Button">
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="TextAppearance.Button.Normal" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AlertPopup" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">#595959</item>
        <item name="colorPrimary">@color/green</item>
    </style>

    <style name="FullScreen_Dialog">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomSheet.Rounded.Theme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet.Rounded</item>
    </style>

    <style name="BottomSheet.Rounded" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_rounded_corners</item>
    </style>
</resources>