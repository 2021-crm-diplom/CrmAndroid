<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white_mat_o60</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="TextInputLayout.Autocomplete" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="hintTextColor">@color/colorAccent</item>
        <item name="android:textColorHint">@color/white_mat_o60</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/colorAccent</item>
        <item name="boxStrokeWidth">0.2dp</item>
        <item name="endIconTint">@color/black</item>
        <item name="materialThemeOverlay">@style/ThemeOverlay.TextInputLayout</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>

    <style name="ThemeOverlay.TextInputLayout.Autocomplete" parent="ThemeOverlay.MaterialComponents.TextInputEditText.FilledBox">
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <style name="ProfileButtonSave" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/blue_dark</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="ProfileButtonExit" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@color/pink_light</item>
        <item name="android:background">@drawable/button_rounded</item>
        <item name="android:textColor">@color/pink_darker</item>
        <item name="android:textSize">16sp</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>